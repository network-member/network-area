{
  "author": "Vladislav Kazantsev",
  "name": "network-area-monorepo",
  "description": "The place where my pet projects live üêº",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "api",
    "ui"
  ],
  "scripts": {
    "api:start": "npm run start:dev --workspace=api",
    "api:build": "npm run build --workspace=api",
    "api:prebuild": "eslint api/ && npm run check-types --workspace=api",
    "api:build-image": "docker build -f Dockerfile.api -t network-area-api .",
    "ui:start": "npm run start:dev --workspace=ui",
    "ui:build": "npm run build --workspace=ui",
    "ui:prebuild": "eslint ui/ && npm run check-types --workspace=ui",
    "ui:build-image": "docker build -f Dockerfile.nginx -t network-area-nginx .",
    "docker:up": "docker compose down -v && docker compose up -d",
    "docker:pack": "docker save network-area-api network-area-nginx -o network-area-images.tar",
    "docker:build": "npm run api:build-image && npm run ui:build-image && npm run docker:pack",
    "prod:deploy": "./deploy.sh",
    "format": "prettier --write .",
    "lint": "eslint ."
  },
  "engines": {
    "node": "24.*"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/node": "^24.1.0",
    "cspell": "^9.4.0",
    "eslint": "^9.39.2",
    "eslint-config-love": "^140.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  }
}
